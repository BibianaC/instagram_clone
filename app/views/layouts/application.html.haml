!!!
%html
  %head
    %title InstagramClone
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true 
    = javascript_include_tag 'application', 'data-turbolinks-track' => true 
    = csrf_meta_tags

  %body
    %header
      - if user_signed_in?
        = link_to "Sign out", destroy_user_session_path, method: :delete, :class => "sign_button"
      - else
        = link_to "Sign in", new_user_session_path, :class => "sign_button"
        = link_to "Sign up", new_user_registration_path, :class => "sign_button"
    %section
      = notice
      = yield

